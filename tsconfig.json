{
  "compilerOptions": {
    "jsxImportSource": "@emotion/react",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",

    "paths": {
      "@tests/*": ["__tests__/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@icons/*": ["Icons/*"],
      "@templates/*": ["templates/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"]
    }
  },
  "exclude": ["node_modules, __tests__"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "mdx.d.ts"]
}
