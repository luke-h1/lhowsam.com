{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2018",                          
    "module": "commonjs",                     
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "jsx": "react",
    "sourceMap": true,
    "strict":true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
