{
  "name": "lhowsam.com",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "alphabetize": "node scripts/alphabetizePackageJson.js",
    "prepare": "husky",
    "commit": "cz",
    "build:frontend": "turbo run build --cache-dir=.turbo",
    "clean": "pnpm -r --parallel exec rm -rf node_modules && rm -rf node_modules",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --list-different \"**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "test": "pnpm -r --parallel --no-bail test -- --passWithNoTests",
    "test:snapshot": "pnpm -r --no-bail test:snapshot",
    "test:ci": "pnpm -r --no-bail --aggregate-output --reporter=append-only test:ci",
    "test:coverage": "pnpm -r --no-bail test:coverage",
    "tsc": "pnpm -r --parallel --no-bail tsc",
    "check:node": "check-node-version --node 20 --pnpm 8",
    "preinstall": "pnpm run check:node"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "check-node-version": "^4.2.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "git-cz": "^4.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.13.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ],
    "package.json": [
      "node scripts/alphabetizePackageJson.js"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}