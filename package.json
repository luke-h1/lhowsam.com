{
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "clean": "lerna clean -y",
    "build": "lerna run build",
    "tsc": "lerna run tsc",
    "test": "yarn workspace @lhowsam/frontend test",
    "e2e:local": "yarn workspace @lhowsam/frontend e2e:local",
    "e2e:prod": "yarn workspace @lhowsam/frontend e2e:prod",
    "e2e:prod-open": "yarn workspace @lhowsam/frontend e2e:prod-open",
    "new-version": "lerna version --conventional-commits --yes",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "deploy:frontend": "vc --prod -f && vc -f",
    "deploy:cms": "cd src/cms && vc --prod -f && vc -f"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "dependencies": {
    "@next/eslint-plugin-next": "^11.1.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^1.2.0"
  },
  "name": "lhowsam-yarn"
}
