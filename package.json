{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "lerna clean -y",
    "build": "lerna run build",
    "tsc": "lerna run tsc",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --quiet --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "start:studio": "yarn workspace studio start",
    "start:frontend": "yarn workspace frontend dev",
    "test": "yarn workspace frontend test"
  },
  "workspaces": [
    "src/studio",
    "src/frontend"
  ],
  "dependencies": {
    "@next/eslint-plugin-next": "^12.1.5",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "eslint": "^8.13.0",
    "eslint-plugin-jest": "^26.0.0",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  }
}
