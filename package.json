{
  "name": "lhowsam-nxt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "cy:ci": "npm run build && npx start-server-and-test http://localhost:3000 cy:run",
    "gen-env": "gen-env-types .env -o src/types/env.d.ts -e .",
    "lint": "eslint \"./src/**/*.{js, jsx,ts,tsx}\" --quiet --fix && eslint \"./**/*.{js, jsx,ts,tsx}\" --quiet --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "deploy": "sh deploy.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@tailwindcss/typography": "^0.4.0",
    "cypress": "^7.2.0",
    "dotenv-safe": "^8.2.0",
    "gen-env-types": "^1.3.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.3",
    "next": "10.2.0",
    "next-mdx-remote": "^2.1.4",
    "next-seo": "^4.24.0",
    "prism-react-renderer": "^1.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "reading-time": "^1.3.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-code-titles": "^0.1.2",
    "remark-slug": "^6.0.0",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/showdown": "^1.9.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "globby": "^11.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.14",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "npm run format"
    ]
  }
}
